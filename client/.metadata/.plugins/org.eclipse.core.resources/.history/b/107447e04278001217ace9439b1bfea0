	View.OnClickListener onClickListener = new View.OnClickListener() {
		
		@Override
		public void onClick(View v) {
			// TODO Auto-generated method stub
			switch(v.getId()){
			case R.id.btn_settime :
				
				break;
				
			default :
				break;					
			}
			
		}
	};
}
