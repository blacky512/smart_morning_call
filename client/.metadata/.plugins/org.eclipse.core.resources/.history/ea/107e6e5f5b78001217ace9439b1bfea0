package whitepaper.smcall;

import android.os.Bundle;
import android.os.PowerManager;
import android.app.Activity;
import android.content.Context;
import android.view.Menu;
import android.widget.Toast;
/**
 * 알람 리시버 액티비티.
 * 알람을 받아서 모닝콜을 연결하도록 함
 * @author Administrator
 *
 */

public class AlarmReceiverActivity extends Activity {
	
	private PowerManager.WakeLock wl;

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.alarmreceiver_activity);
				
	    PowerManager pm = (PowerManager) getSystemService(Context.POWER_SERVICE);
	        wl	= pm.newWakeLock(PowerManager.FULL_WAKE_LOCK, "My Tag");
	        wl	.acquire();
	        
		Toast.makeText(getApplicationContext(), "알람입니다", Toast.LENGTH_LONG).show();
	}
	@Override
	protected void onStop() {
		// TODO Auto-generated method stub
		super.onStop();
		wl.release();
	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		//getMenuInflater().inflate(R.menu.alarmreceiver_activity, menu);
		return true;
	}

}
